# Set default behavior to automatically normalize line endings
* text=auto

# PHP files
*.php text eol=lf
*.phtml text eol=lf

# Configuration files
*.ini text eol=lf
*.json text eol=lf
*.xml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
LICENSE text eol=lf
README text eol=lf
CHANGELOG text eol=lf
CONTRIBUTING text eol=lf

# Web files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.ts text eol=lf

# Shell scripts (always LF)
*.sh text eol=lf
*.bash text eol=lf

# Windows batch files (always CRLF)
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.7z binary
*.rar binary

# Font files
*.eot binary
*.ttf binary
*.woff binary
*.woff2 binary

# Exclude files from export
.gitattributes export-ignore
.gitignore export-ignore
.github/ export-ignore
tests/ export-ignore
benchmarks/ export-ignore
docs/ export-ignore
*.md export-ignore
phpunit.xml export-ignore
psalm.xml export-ignore

# Language statistics (exclude test files from GitHub language detection)
tests/* linguist-documentation
benchmarks/* linguist-documentation
